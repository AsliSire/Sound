<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/RadioEducation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RadioButton
            android:id="@+id/btnIlkokul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İlkokul"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layoutDirection="rtl"
            android:buttonTint="@color/coloriconMidnight"
            android:background="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"/>

        <RadioButton
            android:id="@+id/btnOrtaokul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ortaokul"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layoutDirection="rtl"
            android:buttonTint="@color/coloriconMidnight"
            android:background="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"/>

        <RadioButton
            android:id="@+id/btnLise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lise"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layoutDirection="rtl"
            android:buttonTint="@color/coloriconMidnight"
            android:background="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"/>

        <RadioButton
            android:id="@+id/btnLisans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lisans"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layoutDirection="rtl"
            android:buttonTint="@color/coloriconMidnight"
            android:background="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"/>

        <RadioButton
            android:id="@+id/btnYuksekLisans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yüksek Lisans"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layoutDirection="rtl"
            android:buttonTint="@color/coloriconMidnight"
            android:background="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"/>

        <RadioButton
            android:id="@+id/btnDoktora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doktora"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:textAlignment="textStart"
            android:layoutDirection="rtl"
            android:buttonTint="@color/coloriconMidnight"
            android:background="@color/colorAccent"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"/>

    </RadioGroup>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ONAYLA"
        android:textColor="@color/colorAccent"
        android:background="@color/coloriconMidnight"
        android:layout_below="@+id/RadioEducation"
        android:layout_marginTop="30dp"/>


</RelativeLayout>